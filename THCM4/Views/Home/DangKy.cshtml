@using THCM4.Models;
@model ThanhVien

@using CaptchaMvc.HtmlHelpers;
@using CaptchaMvc;

@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Layout/ProductLayout.cshtml";
}



<div id="ThongBao" class="alert alert-success col-lg-9 collapse">
    <strong>ĐĂNG KÝ THÀNH CÔNG</strong>
</div>
    <h1 style="padding: 0px 80px 30px;
    color: #A09F9F;
    text-align: center;
    font-size: 34px;" class="col-lg-9"> Đăng Ký</h1>
    @using (Html.BeginForm())
    {
        <div class="col-md-4 register-top-grid">

            <div>
                <span>Họ Và Tên</span>
                <input type="text" name="HoTen" value="" required="" />

            </div>
            <div>
                <span>Địa Chỉ</span>
                <input type="text" name="DiaChi" value="" required="" />

            </div>
            <div>
                <span>Email </span>
                <input class="register-bottom-grid" type="text" name="Email" value="" required="" />

            </div>
            <div>
                <span>Số Điện Thoại </span>
                <input type="text" name="Sdt" class="KiemTra" required="" />
              

            </div>
        </div>
        <div class="col-md-4 register-top-grid register-bottom-grid">
            <div>
                <span>Tài Khoản</span>
                <input type="text" name="TaiKhoan" value="" required="" />

            </div>

            <div>
                <span>Mật Khẩu</span>
                <input type="password" name="MatKhau" value="" required="" id="PW" />

            </div>
            <div>
                <span>Nhập Lại Mật Khẩu</span>
                <input type="password" name="NLMK" value="" required="" id="NLPW" />

            </div>
            <div >
                @Html.MathCaptcha()
            </div>
            <input type="submit" value="Đăng Ký" id="btnsubmit">

        </div>
    }

<script type="text/javascript">
    var password = document.getElementById("PW")
        , confirm_password = document.getElementById("NLPW");
    function validatePassword() {
        if (password.value != confirm_password.value) {
            confirm_password.setCustomValidity("Mật Khẩu Không Khớp");
        } else {
            confirm_password.setCustomValidity('');
        }
    }
    password.onchange = validatePassword;
    confirm_password.onkeyup = validatePassword;
    $(document).ready(function () {

        $('#btnsubmit').click(function () {
            $('#ThongBao').show('fade');

            setTimeout(function () {
                $('#ThongBao').hide('fade');
            }, 2000);

        });
    $(".KiemTra").on("keypress keyup blur",function (event) {    
           $(this).val($(this).val().replace(/[^\d].+/, ""));
            if ((event.which < 48 || event.which > 57)) {
                event.preventDefault();
            }
        });
</script>



