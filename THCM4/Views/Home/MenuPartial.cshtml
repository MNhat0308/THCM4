@using THCM4.Models;
@model IEnumerable<SanPham>


    <div class=" h_menu4">
        <ul class="memenu skyblue">
            <li class="showhide" style="display: none;"><span class="title">MENU</span><span class="icon1"></span><span class="icon2"></span></li>
            <li class="active grid" style="display: inline;"><a class="color8" href="@Url.Action("Index","Home")">Trang Chủ</a></li>
            @foreach (var groupitem in Model.GroupBy(n => n.LoaiSP))
            {
                if (groupitem.Key != null)
                {

                        <li style="display: inline;">
                            <a class="color1" href="#">@groupitem.Key.TenLoai</a>
                            <div class="mepanel">
                                <div class="row">
                                    <div class="col1">
                                        <div class="h_nav">
                                            <ul>
                                                @foreach (var item in groupitem.GroupBy(n => n.NSX))
                                                {
                                                    if (item.Key != null)
                                                    {
                                                        <li><a href="@Url.Action("LoadSanPham","SanPham",new {@MaLoaiSP=groupitem.Key.MaLoaiSP,@MaNSX=item.Key.MaNSX } )">@item.Key.TenNSX</a></li>
                                                    }

                                                }


                                            </ul>
                                        </div>
                                    </div>
                                </div>
                             </div>
                          </li>
                }
            }
            <li style="display: inline;"><a class="color4" href="">Giới Thiệu</a></li>
            <li style="display: inline;"><a class="color6" href="@Url.Action("Index","Admin")">Quản Lý</a></li>
        </ul>
    </div>