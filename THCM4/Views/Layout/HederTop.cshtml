@using THCM4.Models;


    <div class="header-top">
        <div class="container">
            <div class="search">
                <form>
                    <input type="text" value="Search " onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Search';}">
                    <input type="submit" value="Go">
                </form>
            </div>
            <div class="header-left">
                <ul>
                    @if (Session["TaiKhoan"] != null)
                    {

                        ThanhVien tv = (ThanhVien)Session["TaiKhoan"];

                        <li class="lock">@tv.HoTen</li>
                        @Html.ActionLink("Đăng Xuất","DangXuat","Home")
                    }
                    else
                    {
                        <li><a id="DN" class="lock">Đăng Nhập</a></li>
                        <li><a class="lock" href="@Url.Action("DangKy","Home")">Đăng Ký</a></li>
                    }


                    <li>
                    </li>

                </ul>
               @Html.Action("GioHangPartial","GioHang")
                <div class="clearfix"> </div>
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
    
    
    <link href="~/Content/Login/style.css" rel="stylesheet" type="text/css">
 
    <div id="popup_login">
        <div class="main-content-agile">
            <div class="sub-main-w3">
              
                <h2>Đăng Nhập</h2>
                @using (Ajax.BeginForm("Login", "Home",new AjaxOptions {InsertionMode=InsertionMode.Replace,UpdateTargetId="ThongBao" }))

                {

                    <div class="pom-agile">

                        <input placeholder="Tài Khoản" name="txtTK" class="user" type="text" required="">
                    </div>
                    <div class="pom-agile">

                        <input placeholder="Mật Khẩu" name="txtMK" class="pass" type="password" required="">
                    </div>
                    <div class="sub-w3l">

                        <a href="#">Quên Mật Khẩu?</a>
                        <h3 id="ThongBao"></h3>
                        
                        <div class="clear"></div>
                    </div>
                    <div class="right-w3l">
                        <input type="submit" value="Login">
                        <input type="submit" value="Back" id="AnDN">
                    </div>
                }



            </div>
        </div>
    </div>
<script type="text/javascript">
    //Hiện pop up
    $("#DN").click(function ()
    {
        $("#popup_login").slideDown();
    });
     $("#AnDN").click(function ()
     {
         $("#popup_login").hide();
    });
</script>
  