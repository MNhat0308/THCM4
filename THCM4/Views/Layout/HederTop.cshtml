@using THCM4.Models;

<style>
    .Hoten {
        color: white;
        margin-top: 8px;
    }
    .DangXuat {
        color: white;
        margin-right: 31px;
        margin-left: 47px;
    }

</style>

    <div class="header-top">
        <div class="container">
            <div class="search">
            
                @using (Html.BeginForm("Search","TimKiem"))
                {
                    <input type="text"  name="stukhoa" >
                    <input type="submit" value="Tìm Kiếm">
                }
            </div>
            <div class="header-left">
                <ul>
                    @if (Session["TaiKhoan"] != null)
                    {

                        ThanhVien tv = (ThanhVien)Session["TaiKhoan"];

                        <li class="Hoten" >@tv.HoTen</li>
                        @Html.ActionLink("Đăng Xuất", "DangXuat", "Home",new { @class="DangXuat"})
                      
                    }
                    else
                    {
                        <li><a id="DN" >Đăng Nhập</a></li>
                        <li><a class="lock" href="@Url.Action("DangKy", "Home")">Đăng Ký</a></li>
                        }


                    <li>
                    </li>

                </ul>
               @Html.Action("GioHangPartial","GioHang")
                <div class="clearfix"> </div>
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
    
    
    <link href="~/Content/Login/style.css" rel="stylesheet" type="text/css">
 
    <div id="popup_login">
        <div class="main-content-agile">
            <div class="sub-main-w3">
              
                <h2>Đăng Nhập</h2>
                @using (Ajax.BeginForm("Login", "Home",new AjaxOptions {InsertionMode=InsertionMode.Replace,UpdateTargetId="ThongBao" }))

                {

                    <div class="pom-agile">

                        <input placeholder="Tài Khoản" name="txtTK" class="user" type="text" required="">
                    </div>
                    <div class="pom-agile">

                        <input placeholder="Mật Khẩu" name="txtMK" class="pass" type="password" required="">
                    </div>
                    <div class="sub-w3l">

                        <a href="#">Quên Mật Khẩu?</a>
                        <h3 id="ThongBao"></h3>
                        
                        <div class="clear"></div>
                    </div>
                    <div class="right-w3l">
                        <input type="submit" value="Login">
                        <input type="submit" value="Back" id="AnDN">
                    </div>
                }



            </div>
        </div>
    </div>
<script type="text/javascript">
    //Hiện pop up
    $("#DN").click(function ()
    {
        $("#popup_login").slideDown();
    });
     $("#AnDN").click(function ()
     {
         $("#popup_login").hide();
    });
</script>
  